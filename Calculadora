<html>
    <cabeca>
        <titulo>Calculadora</titulo>
    </cabeca>
    <body>    
        <label>Valor 1</label>
        <input id="valor1"> <br><br>
        <label>Valor 2</label>
        <input id="valor2"> <br><br>
        <label>RESULTADO:</label>
        <span id="resultado"> 0 </span>

      <br><br>

        <button onclick="soma();" >SOMA</button>   
        <button onclick="subtracao();" >SUBTRAÇÃO</button>
        <button onclick="multiplicacao();" >MULTIPLICAÇÃO</button>
        <button onclick="divisao();" >DIVISÃO</button>
        <button onclick="limpar();">LIMPAR</button>
            

        <script>
            function soma(){
               let n1 = parseInt(document.getElementById("valor1").value );             
                let n2 = parseInt(document.getElementById("valor2").value );
                if (isNaN(n1) || isNaN(n2)) {
            document.getElementById("resultado").innerText = "Informe números válidos";
            return;
             }
                let resultado = n1 + n2;
                document.getElementById("resultado").innerText = resultado;
                

            }
            function subtracao(){
                let n1 = parseInt(document.getElementById("valor1").value );             
                let n2 = parseInt(document.getElementById("valor2").value );
                if (isNaN(n1) || isNaN(n2)) {
            document.getElementById("resultado").innerText = "Informe números válidos";
            return;
            }
                let resultado = n1 - n2;
                document.getElementById("resultado").innerText = resultado;
                
            }
            function multiplicacao(){
                let n1 = parseInt(document.getElementById("valor1").value );             
                let n2 = parseInt(document.getElementById("valor2").value );
                if (isNaN(n1) || isNaN(n2)) {
            document.getElementById("resultado").innerText = "Informe números válidos";
            return;
            }
                let resultado = n1 * n2;
                document.getElementById("resultado").innerText = resultado;
                
            }
            function divisao(){
                let n1 = parseInt(document.getElementById("valor1").value );             
                let n2 = parseInt(document.getElementById("valor2").value );
                if (isNaN(n1) || isNaN(n2)) {
            document.getElementById("resultado").innerText = "Informe números válidos";
            return;
            }
                let resultado = n1 / n2;
                document.getElementById("resultado").innerText = resultado;
                
            }
            function limpar(){
                document.getElementById("valor1").value = "";
                document.getElementById("valor2").value = "";
                document.getElementById("resultado").innerText = 0;
            }

           
        </script>
    </body>
</html>
